<!--

TypeWalker.targets

-->
<Project DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <CompileDependsOn>
      $(CompileDependsOn);
      CompileTypeWalker;
    </CompileDependsOn>
  </PropertyGroup>
  
  <!-- Generate TypeScript Resources Configuration -->
  <PropertyGroup>
    <GenerateTypeScriptResourcesResourceGeneratorPath>$(ProjectDir)bin\TypeWalker.exe</GenerateTypeScriptResourcesResourceGeneratorPath>
    <GenerateTypeScriptOutputFile>c:\temp\ai2.d.ts</GenerateTypeScriptOutputFile>  
  </PropertyGroup>
    
  <!-- Generate Javascript Resources Target -->
  <Target Name="GenerateTypeScriptResources" BeforeTargets="Build">
    <Message Text="Running GenerateJavascriptResources target" Importance="high" />
    <Exec 
        Command="$(GenerateTypeScriptResourcesResourceGeneratorPath) /binDir=&quot;$(GenerateTypeScriptResourcesResourceGeneratorPath)&quot; /configFile=&quot;$(ProjectDir)%(GenerateTypeScriptResources.Identity)&quot; /language=&quot;TypeScript&quot; /outputFile=&quot;$(GenerateTypeScriptOutputFile)&quot;"
    />
  </Target>

  <Target Name="CompileTypeWalker" Condition="'$(BuildingProject)' != 'false'">
  </Target>

</Project>
